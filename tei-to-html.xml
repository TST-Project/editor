<xsl:template match="x:msItem">
  <table class="msItem">
    <xsl:if test="@n">
        <xsl:variable name="thisn" select="@n"/>
        <xsl:element name="thead">
            <xsl:element name="tr">
                <xsl:element name="th">
                    <xsl:attribute name="colspan">2</xsl:attribute>
                    <xsl:attribute name="class">left-align</xsl:attribute>
                    <xsl:choose>
                        <xsl:when test="//x:TEI/x:text[@n=$thisn]">
                            <xsl:element name="a">
                                <xsl:attribute name="href">
                                    <xsl:text>#text-</xsl:text>
                                    <xsl:value-of select="@n"/>
                                </xsl:attribute>
                                <xsl:attribute name="data-scroll"/>
                                <xsl:value-of select="@n"/>
                            </xsl:element>
                        </xsl:when>
                        <xsl:otherwise>
                        <xsl:value-of select="@n"/>
                        </xsl:otherwise>
                    </xsl:choose>
                    <xsl:choose>
                        <xsl:when test="@defective = 'false'">
                            <xsl:text> (complete)</xsl:text>
                        </xsl:when>
                        <xsl:when test="@defective = 'true'">
                            <xsl:text> (incomplete)</xsl:text>
                        </xsl:when>
                        <xsl:otherwise/>
                    </xsl:choose>
                </xsl:element>
            </xsl:element>
        </xsl:element>
    </xsl:if>
    <xsl:apply-templates/>
  </table>
  <xsl:if test="not(position() = last())">
    <xsl:element name="hr"/>
  </xsl:if>
</xsl:template>

